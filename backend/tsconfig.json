{
  "compilerOptions": {
    // ... your other options
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["es6"]
    // You can also explicitly add typeRoots if needed, though usually not necessary
    // "typeRoots": ["./node_modules/@types", "./src/types"]
  },
  "include": ["src/**/*"], // This MUST include src/types/
  "exclude": ["node_modules"]
}